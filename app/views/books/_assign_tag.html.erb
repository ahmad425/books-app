<!-- Modal -->
<div class="modal fade" id="assign-book-tag-modal" tabindex="-1" role="dialog" aria-labelledby="booksTagCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_tag assign_tag_books_path do %>
        <div class="modal-header">
          <h5 class="modal-title" id="booksTagCenterTitle">Assign Tag</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h4>Select Tag:</h4>
          <%= select_tag(:tag_id, options_for_select(Tag.pluck(:name, :id)), class: "select form-control") %>
          <h4 class="mt-3">Select Books:</h4>
          <% Book.all.each do |b| %>
            <div class="form-check mt-2">
              <input type="checkbox" name="books_ids[]" class="form-check-input" value=<%= b.id %> />
              <label class="form-check-label">
                <%= b.title %>
              </label>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>